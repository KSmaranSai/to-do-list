<%- include("header") -%>

<div class="box" id="heading">
    <h1><%=listHeading%></h1>
</div>
<div class="box">
    <% newItem.forEach(element => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=element._id%>">
            <p><%= element.todo %></p>
        </div>
    </form>
    <% }); %>
    <form action="/" method="post" class="item">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="btn" value="<%= listHeading %>">+</button>
    </form>

</div>

<%- include("footer") -%>